# Activer le moteur de réécriture d'URL
RewriteEngine On

# Vérifier si la connexion n'est PAS en HTTPS
RewriteCond %{HTTPS} !=on

# Rediriger tout le trafic HTTP vers HTTPS
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

